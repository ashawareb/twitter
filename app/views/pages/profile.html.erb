<div class="row" style="margin-top: 10px">
  <div class="col-12">
    <div class="jumbotron">
      <%= @username %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-3">
    <div class="card">
      <div class="card-body">Profile</div>
    </div>
  </div>

  <div class="col-6">
    <%= render 'components/tweet' %>
    <% @posts.each do |post| %>
      <div class="card">
        <div class="card-body">
          <%= post.content %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-3">
    <div class="card">
      <div class="card-body">Who to follow</div>
    </div>
    <div class="card">
      <div class="card-body">trends</div>
    </div>
  </div>
</div>

